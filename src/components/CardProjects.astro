---
import { Image } from 'astro:assets'

interface Props {
    imgProject: ImageMetadata,
    title: string,
    description: string,
    technologies: ImageMetadata[],
    linkProject?: string,
    linkRepository?: string
}

const {imgProject, title, description, technologies, linkProject, linkRepository} = Astro.props
---

<div class="max-w-[400px] min-h-[600px] flex flex-col justify-between">
    <div>
        <Image src={imgProject} class={"w-full h-[190px] object-contain"} alt={"Project Image"}/>
        <div>
            <h3 class="text-3xl font-bold md:text-4xl text-center mb-5 mt-5">{title}</h3>
            <p class="text-lg md:text-xl text-center text-extra-light-gray mb-5">{description}</p>
        </div>
    </div>
    <div class="p-4 flex flex-col justify-between">
        <div class="flex gap-2 flex-wrap">
            {
                technologies.map(logo => {
                    return <Image class={"h-14 w-14"} src={logo} alt={"technologie-logo"}/>
                })
            }
        </div>
        <div class="flex justify-between mt-5">
            {
                linkProject ? <a class={"btnLink py-1 px-2 rounded text-lg md:text-xl hover:scale-110 transition"} href={linkProject} target="_blank" rel="noopener noreferrer">Visit</a> 
                            : null
            }
            {
                linkRepository ? <a class={"btnLink py-1 px-2 rounded text-lg md:text-xl hover:scale-110 transition"} href={linkRepository} target="_blank" rel="noopener noreferrer">Repository</a> 
                                : null
            }
        </div>
    </div>
</div>

<style>
    .btnLink {
        background: linear-gradient(to right, #1aa194, rgb(4, 115, 188));
    }
</style>