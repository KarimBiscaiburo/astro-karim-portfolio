---
import { Image } from 'astro:assets'

interface Props {
    title: string,
    description: string,
    technologies: ImageMetadata[]
}

const {title, description, technologies} = Astro.props
---

<div class="p-6 flex flex-col gap-7 justify-between border border-darken-cian rounded-md max-w-[400px] bg-light-dark shadow-[0_0_12px] shadow-cian">
    <h3 class="text-3xl font-bold md:text-4xl text-center mb-5">{title}</h3>
    <p class="text-lg md:text-xl text-center mb-5 text-extra-light-gray">{description}</p>
    <div class="flex gap-2 flex-wrap">
        {
            technologies.map(logo => {
                return <Image class={"h-14 w-14"} src={logo} alt={"technologie-logo"}/>
            })
        }
    </div>
</div>